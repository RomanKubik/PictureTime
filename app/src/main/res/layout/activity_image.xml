<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.kubik.picturetime.customViews.SquareImageView
                android:id="@+id/iv_random_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_random_image"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginStart="@dimen/card_margin"
                android:textSize="@dimen/text_size_large" />

            <ImageView
                android:id="@+id/iv_det_like"
                android:layout_width="@dimen/like_dimen"
                android:layout_height="@dimen/like_dimen"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/iv_random_image"
                android:layout_marginEnd="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin"
                android:layout_marginTop="@dimen/top_like_margin"
                android:src="@drawable/heart" />

            <TextView
                android:id="@+id/tv_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_random_image"
                android:layout_toLeftOf="@+id/iv_det_like"
                android:layout_toStartOf="@+id/iv_det_like"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/tv_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_likes"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginStart="@dimen/card_margin" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/top_like_margin"
            android:layout_marginStart="@dimen/top_like_margin"
            android:layout_marginTop="@dimen/card_margin"
            android:text="@string/author_bio"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/tv_author_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/top_like_margin"
            android:layout_marginStart="@dimen/top_like_margin" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/top_like_margin"
            android:layout_marginStart="@dimen/top_like_margin"
            android:layout_marginTop="@dimen/card_margin"
            android:text="@string/camera_information"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/tv_camera_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/top_like_margin"
            android:layout_marginStart="@dimen/top_like_margin" />

    </LinearLayout>
</ScrollView>
