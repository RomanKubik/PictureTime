<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/cv_activity_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.kubik.picturetime.customViews.SquareImageView
                android:id="@+id/iv_random_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_margin"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_below="@+id/iv_random_image"
                android:textSize="@dimen/text_size_large"/>
            <ImageView
                android:id="@+id/iv_det_like"
                android:layout_width="@dimen/like_dimen"
                android:layout_height="@dimen/like_dimen"
                android:layout_marginTop="@dimen/top_like_margin"
                android:layout_marginEnd="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin"
                android:layout_below="@+id/iv_random_image"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/heart"/>
            <TextView
                android:id="@+id/tv_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_random_image"
                android:layout_toStartOf="@+id/iv_det_like"
                android:layout_toLeftOf="@+id/iv_det_like"
                android:textSize="@dimen/text_size_large"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>